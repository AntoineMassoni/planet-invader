
  <div class="profile-container">
    <h1>Dashboard</h1>


    <div class="row">
      <div class="col-3 pl-1 pr-1">
        <div class="profile-card">
          <div>
            <div>
              <div class="ml-2 ">
                <h2>Hello,
                  <%=current_user.first_name %> <%= current_user.last_name %>!
                </h2>
                <div>
                  <p>Téléphone : <%= current_user.phone_number %></p>
                  <div>
                    <p>Email : <%= current_user.email %></p>
                  </div>

                </div>
                <div>
                  <p>Change password</p>
                </div>

              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="col-6 pl-1 pr-1">
        <div class="dashboard-card">
          <h2>My Planets</h2>

          <% current_user.planets.each do |planet| %>
            <div class="card-product">
              <img src="<%= planet.planet_pictures.first.photo %>" alt="">
              <div class="ml-2">
                <h3><%= planet.name %></h3>
                <div>Local population : <%= planet.local_population %></div>
                <div>Planet activities : <%= planet.activities %></div>
                <div>Stellar coordinates : <%= planet.stellar_coordinates %></div>
                <div>Price : <%= planet.price%></div>
                <div>Capacity : <%= planet.capacity%></div>
                <div>Weather : <%= planet.weather%></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="col-3 pl-1 pr-1">
        <div class="dashboard-card">
          <h2>My bookings</h2>
        </div>
      </div>

    </div>
  </div>


