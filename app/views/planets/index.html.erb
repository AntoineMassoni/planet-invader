<div class="container mt-3">
  <div class="row">
    <div class="col-12 col-sm-12">
      <h1>Check out the planets</h1>
    </div>
  </div>
  <div class="row">
    <% @planets.each do |planet| %>
    <div class="col-4 col-sm-12 col-md-6 col-lg-4">
      <div class="planet-card">
          <%= link_to planet_path(planet[:id]) do %>
        <div class="planet-card-image">
          <%= cl_image_tag planet.planet_pictures.first.photo %>
        </div>
        <div class="planet-card-content">
          <div class="planet-card-title">
            <h4><%= planet.name %></h4>
          </div>
          <p>Coordinates: <%= planet.stellar_coordinates %></p>
          <div class="flex">
            <div class="flex">
              <h3><%= planet.capacity %> <i class="fas fa-user-astronaut"></i></h3>
            </div>
            <div class="flex ml-3">
              <h3><%= planet.price %><i class="far fa-gem"></i></h3>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
