<%= simple_form_for(@planet) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :stellar_coordinates %>
    <%= f.text_field :stellar_coordinates, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :capacity %>
    <%= f.number_field :capacity, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :activities %>
    <%= f.text_area :activities, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weather %>
    <%= f.text_field :weather, class: 'form-control' %>
  </div>
  <div>
   <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="mt-3">
     <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'no longer wish to add a planet?', planets_path, class: 'btn btn-danger ml-2' %>
  </div>
<% end %>
