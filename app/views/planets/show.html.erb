<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <% pictures = @planet.planet_pictures %>
    <% pictures.each do |picture| %>
      <% if picture == @planet.planet_pictures.first %>
        <div class="carousel-item active">
          <%= cl_image_tag picture.photo, class: "carousel-img" %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= cl_image_tag picture.photo, class: "carousel-img" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="show-container">
  <h1 id='planet-name'><%= @planet.name %></h1>

  <div class="row">
    <div class="col-8">
      <div class="planet-infos">
        <div class="category">
          <h3><i class="fab fa-reddit-alien"></i> Local Population:</h3>
          <p class="bottom-separation"><%= @planet.local_population %></p>
        </div>
        <div class="category">
          <h3><i class="far fa-file-alt"></i> Description:</h3>
          <p><%= simple_format(@planet.description) %></p>
          <p class="bottom-separation"></p>
        </div>
        <div class="category">
          <h3><i class="fas fa-map-marker-alt"></i> Stellar Coordinates:</h3>
          <p class="bottom-separation"><%= @planet.stellar_coordinates %></p>
        </div>
        <div class="category">
          <h3><i class="fas fa-dice"></i> Activities:</h3>
          <p class="bottom-separation"><%= @planet.activities %></p>
        </div>
        <div class="category">
          <h3><i class="fas fa-cloud-sun"></i> Weather:</h3>
          <p><%= @planet.weather %></p>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="booking-card">
        <h2>Book this planet</h2>
        <div id="booking-form-div" data-bookings="<%= @bookings_dates.to_json %>">
          <%= render 'shared/bookingForm', planet: @planet, booking: @booking %>
        </div>
      </div>
    </div>
  </div>
</div>
